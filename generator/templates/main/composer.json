{
  "name": "lewebsimple/<%= context.outFolder %>",
  "description": "WordPress project",
  "version": "0.1.5",
  "type": "project",
  "repositories": [
      {
          "type": "composer",
          "url": "https://wpackagist.org"
      },
      {
          "type": "composer",
          "url": "https://satis.ledevsimple.ca"
      }
  ],
  "prefer-stable": true,
  "config": {
      "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
      "post-update-cmd": "wp core download --force --skip-content",
      "post-create-project-cmd": "wp core download --force --skip-content"
  },
  "require": {
    "composer/installers": "*"
  }
}
